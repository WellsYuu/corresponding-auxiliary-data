<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <dubbo:application name="demo-consumer"/>

    <dubbo:registry protocol="zookeeper" address="192.168.0.147:2181" check="true"/>

    <dubbo:reference connections="2" id="demoService"
                     timeout="2000"
                     interface="com.tuling.teach.service.DemoService" check="false"
    />
    <dubbo:reference id="userService" interface="com.tuling.teach.service.UserService" check="false"/>

    <!--failover
    failfast
    failsafe
    failback
    forking
    broadcast-->
    <dubbo:reference timeout="1000" cluster="broadcast" retries="1" id="clusterDemoService"
                     interface="com.tuling.teach.service.cluster.ClusterDemoService"
                     check="true">
    </dubbo:reference>

</beans>