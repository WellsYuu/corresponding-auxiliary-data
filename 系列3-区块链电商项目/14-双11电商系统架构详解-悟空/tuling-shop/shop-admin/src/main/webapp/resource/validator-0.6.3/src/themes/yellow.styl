/* theme: yellow */
.n-yellow {
    .msg-wrap {
        position: absolute;
        z-index: 1;
        padding: 4px 6px;
        font-size: 12px;
        border: 1px solid transparent;
        theme(#DB7C22, #FFFCEF, #FFBB76, #ccc);
        border-radius: 2px;

        .n-icon {
            background-image: url(images/validator_simple.png);
        }
    }
    .n-top {
        .msg-wrap {
            bottom: 100%;
        }
    }
    .n-bottom {
        .msg-wrap {
            top: 100%;
        }
    }
    .n-tip, .n-ok, .n-loading {
        theme(#333, #f8fdff, #ddd, #ccc);
    }
    .n-tip {
        .n-icon {display:none;}
    }
}