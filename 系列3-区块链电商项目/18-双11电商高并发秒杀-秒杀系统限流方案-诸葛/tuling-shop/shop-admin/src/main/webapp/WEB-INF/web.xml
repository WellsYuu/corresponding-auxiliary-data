    <servlet>
        <servlet-name>Uploadify</servlet-name>
        <servlet-class>com.jiagouedu.core.servlet.Uploadify</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Uploadify</servlet-name>
        <url-pattern>/uploadify.do</url-pattern>
    </servlet-mapping>

