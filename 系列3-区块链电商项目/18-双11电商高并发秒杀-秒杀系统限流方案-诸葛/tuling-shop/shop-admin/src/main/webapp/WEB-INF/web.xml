    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>
                http://jsptags.com/tags/navigation/pager
            </taglib-uri>
            <taglib-location>
                /WEB-INF/jsp/pager-taglib.tld
            </taglib-location>
        </taglib>
    </jsp-config>


    <listener>
        <listener-class>com.jiagouedu.core.listener.SystemListener</listener-class>
    </listener>
